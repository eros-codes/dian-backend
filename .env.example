# Example local database configuration
DATABASE_URL=postgresql://cafe:cafe@localhost:5432/cafe?schema=public

# JWT Configuration
JWT_SECRET=your-secret-key-here

# Zarinpal Payment Gateway Configuration (Sandbox)
# دریافت Merchant ID از: https://dashboard.zarinpal.com
ZARINPAL_MERCHANT_ID=773f9779-71ee-4ec5-ae93-7cd1950696cd

# برای development با localhost، باید از ngrok استفاده کنید:
# 1. نصب ngrok: npm install -g ngrok
# 2. اجرای ngrok: ngrok http 4000
# 3. کپی URL ngrok و جایگزینی در ZARINPAL_CALLBACK
# مثال: ZARINPAL_CALLBACK=https://abc123.ngrok-free.app/api/pay/callback
ZARINPAL_CALLBACK=http://localhost:4000/api/pay/callback

# URL(s) کلاینت (می‌توانید چندین URL با کاما جدا کنید)
CLIENT_URL=http://localhost:3001,http://192.168.0.177:3001

# Email Configuration (if needed)
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USER=your-email@gmail.com
# EMAIL_PASS=your-password

# Cloudinary Configuration (if needed)
# CLOUDINARY_CLOUD_NAME=your-cloud-name
# CLOUDINARY_API_KEY=your-api-key
